-----------------
INPUT
----------------- 
type Query {
  int(input: Int = 10): String!
  float(input: Float = 10): String!
}

-----------------
OUTPUT
-----------------
import { GraphQLSchema, GraphQLObjectType, GraphQLNonNull, GraphQLString, GraphQLInt, GraphQLFloat } from "graphql";
const QueryType: GraphQLObjectType = new GraphQLObjectType({
    name: "Query",
    fields() {
        return {
            int: {
                name: "int",
                type: new GraphQLNonNull(GraphQLString),
                args: {
                    input: {
                        name: "input",
                        type: GraphQLInt,
                        defaultValue: 10
                    }
                }
            },
            float: {
                name: "float",
                type: new GraphQLNonNull(GraphQLString),
                args: {
                    input: {
                        name: "input",
                        type: GraphQLFloat,
                        defaultValue: 10
                    }
                }
            }
        };
    }
});
const schema = new GraphQLSchema({
    query: QueryType
});
export { schema };
