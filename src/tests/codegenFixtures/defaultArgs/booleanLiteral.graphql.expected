INPUT
----------------- 
type Query {
  true(input: Boolean = True): String!
  false(input: Boolean = False): String!
}

-----------------
OUTPUT
-----------------
import { GraphQLSchema, GraphQLObjectType, GraphQLNonNull, GraphQLString, GraphQLBoolean } from "graphql";
const QueryType: GraphQLObjectType = new GraphQLObjectType({
    name: "Query",
    fields() {
        return {
            true: {
                name: "true",
                type: new GraphQLNonNull(GraphQLString),
                args: {
                    input: {
                        name: "input",
                        type: GraphQLBoolean
                    }
                }
            },
            false: {
                name: "false",
                type: new GraphQLNonNull(GraphQLString),
                args: {
                    input: {
                        name: "input",
                        type: GraphQLBoolean
                    }
                }
            }
        };
    }
});
const schema = new GraphQLSchema({
    query: QueryType,
    types: [QueryType]
});
export { schema };
