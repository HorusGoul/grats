type Query {
  greeting(name: String @deprecated(reason: "Use 'name2' instead")): String
}

-----------------
OUTPUT
-----------------
import { GraphQLSchema, GraphQLObjectType, GraphQLString } from "graphql";
const QueryType: GraphQLObjectType = new GraphQLObjectType({
    name: "Query",
    fields() {
        return {
            greeting: {
                name: "greeting",
                type: GraphQLString,
                args: {
                    name: {
                        deprecationReason: "Use 'name2' instead",
                        name: "name",
                        type: GraphQLString
                    }
                }
            }
        };
    }
});
const schema = new GraphQLSchema({
    query: QueryType,
    types: [QueryType]
});
export { schema };
