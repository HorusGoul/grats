-----------------
INPUT
----------------- 
input MyInput {
  """
  A description
  """
  myField: String
}

type Query {
  greeting(input: MyInput): String
}

-----------------
OUTPUT
-----------------
import { GraphQLSchema, GraphQLObjectType, GraphQLString, GraphQLInputObjectType } from "graphql";
const MyInputType: GraphQLInputObjectType = new GraphQLInputObjectType({
    name: "MyInput",
    fields() {
        return {
            myField: {
                description: "A description",
                name: "myField",
                type: GraphQLString
            }
        };
    }
});
const QueryType: GraphQLObjectType = new GraphQLObjectType({
    name: "Query",
    fields() {
        return {
            greeting: {
                name: "greeting",
                type: GraphQLString,
                args: {
                    input: {
                        name: "input",
                        type: MyInputType
                    }
                }
            }
        };
    }
});
const schema = new GraphQLSchema({
    query: QueryType,
    types: [MyInputType, QueryType]
});
export { schema };
