-- TypeScript --
import { GraphQLSchema, GraphQLObjectType, GraphQLString } from "graphql";
export function getSchema(): GraphQLSchema {
    const PageType: GraphQLObjectType = new GraphQLObjectType({
        name: "Page",
        fields() {
            return {
                title: {
                    name: "title",
                    type: GraphQLString
                }
            };
        }
    });
    return new GraphQLSchema({
        types: [PageType]
    });
}
